generator client {
  provider        = "prisma-client-js" // Указывает, что нужно сгенерировать Prisma Client — auto-generated client для взаимодействия с базой данных на TypeScript/JavaScript
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql" // Определяет, что используется PostgreSQL в качестве СУБД
  url      = env("DATABASE_URL") // Указывает URL подключения к базе через переменную окружения `DATABASE_URL` для безопасности и гибкости
}
